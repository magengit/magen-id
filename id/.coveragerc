# .coveragerc to control coverage.py
[run]
branch = True
source = ./id_service

omit =
	*/tests/*
    */id_service/id_server.py*
    */id_service/magenid/idsapp/idsserver/lib*
    */id_service/magenid/idsapp/idsserver/utils*
    */id_service/magenid/idsapp/idsserver/views*
    */id_service/magenid/idsapp/idsserver/rest/authorize_rest_api.py*


[report]
# Regexes for lines to exclude from consideration
exclude_lines =
    # Have to re-enable the standard pragma
    pragma: no cover

    # Don't complain about missing debug-only code:
    def __repr__
    if self\.debug

    # Don't complain if tests don't hit defensive assertion code:
    raise AssertionError
    raise NotImplementedError

    # Don't complain if non-runnable code isn't run:
    if 0:
    if __name__ == .__main__.:

show_missing = True
fail_under = 60

ignore_errors = True

[html]
directory = coverage_html_report